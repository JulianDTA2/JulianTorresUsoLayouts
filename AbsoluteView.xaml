<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulianTorresUsoLayouts.AbsoluteView"
             Title="AbsoluteView">
    <AbsoluteLayout>

        <!-- Ícono fijo en la parte superior -->
        <Image Source="icono.png"
               AbsoluteLayout.LayoutBounds="0.5,0,100,100"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               HorizontalOptions="Center" />

        <!-- Scrollable content -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <StackLayout Padding="20" Spacing="15">
                <!-- Contenido de ejemplo -->
                <Label Text="Contenido largo que necesita scroll"
                       FontSize="20"/>
                <!-- Repite para simular scroll -->
                <Label Text="Más contenido..." />
                <BoxView HeightRequest="800" Color="Transparent"/>
            </StackLayout>
        </ScrollView>

        <!-- Botón flotante en esquina inferior derecha -->
        <Button Text="Ir a Grid"
                Clicked="OnButtonClicked"
                BackgroundColor="DeepSkyBlue"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="120"
                AbsoluteLayout.LayoutBounds="1,1,120,50"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>